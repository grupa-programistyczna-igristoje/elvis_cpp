#include <iostream> //zawarcie biblioteki iostream

unsigned short pkt;
char ocena;

class Klasyfikacja
{
    public:

    unsigned short obliczanie(unsigned short pkt)
    {
        if (pkt > 100)
        {
            std::cout<<"Nie mozesz miec wiecej punktow niz 100";
        }
        return pkt,ocena;
    }




};


short linia()

int main() //inicjacja oraz wywołanie funkcji main
{
    std::cout<<"Podaj swoje pkt: ";
    std::cin>>::pkt;
    Klasyfikacja oceny1;
    oceny1.obliczanie(pkt);
    std::cout<<"\n\nTwoja liczba punktow: "<<pkt;


	return 0;
}
